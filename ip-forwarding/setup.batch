netns add router0
netns exec router0 sysctl -w net.ipv4.ip_forward=1

netns add box0
link add box0 netns router0 type veth peer router0 netns box0
netns exec box0 ip link set router0 up
netns exec router0 ip link set box0 up
netns exec router0 ip addr add 192.168.0.1/24 dev box0
netns exec box0 ip addr add 192.168.0.254/24 dev router0
netns exec box0 ip route add default via 192.168.0.1 dev router0

netns add box1
link add box1 netns router0 type veth peer router0 netns box1
netns exec box1 ip link set router0 up
netns exec router0 ip link set box1 up
netns exec router0 ip addr add 192.168.1.1/24 dev box1
netns exec box1 ip addr add 192.168.1.254/24 dev router0
netns exec box1 ip route add default via 192.168.1.1 dev router0
